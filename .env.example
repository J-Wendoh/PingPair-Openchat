# OpenChat Bot configuration
# Create an identity with dfx identity new pingpair_identity
# Export the PEM with: dfx identity export pingpair_identity > identity.pem
PEM_FILE=./identity.pem

# Server configuration
PORT=3000
NODE_ENV=development

# OpenChat Configuration
OPENCHAT_PRINCIPAL=your-principal-id
BOT_NAME=PingPair
BOT_DESCRIPTION="Connect globally through cultural exchange"

# API Configuration
API_VERSION=v1
RATE_LIMIT=100
RATE_WINDOW=60000

# Feature Flags
ENABLE_BLOCKCHAIN_NEWS=true
ENABLE_ACHIEVEMENTS=true
ENABLE_ANNOUNCEMENTS=true

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

